<section class="py-24 overflow-hidden 2xl:py-44 bg-blueGray-100 rounded-t-10xl">
  <div class="container px-4 mx-auto">
    <div class="flex flex-wrap -mx-2 mb-14">
      <div class="mx-3 my-5">
        <% Review::SCOPES.each do |scope| %>
        <a href=<%= book_reviews_path(book_id: @book.id, order: scope) %>>
          <button class="btn<%= ' active-filter' if @scopes.include?(scope) %>">
            <%= scope.to_s.titlecase %>
          </button>
        </a>
        <% end %>
      </div>
      <div class="w-full px-2 mb-4" style="background-image: url('<%= rails_blob_url(@book.cover_picture) %>')">
        <div class="flex items-center h-full px-8 py-12 my-10 bg-white opacity-80">
          <div class="flex flex-wrap items-center justify-between w-full -mx-2">
            <div class="w-full px-2 mb-8 md:w-auto md:mb-0">
              <a class="block mb-2 text-2xl font-medium xl:text-3xl font-heading hover:underline"
                href=<%= book_path(@book)%>>
                <%= @book.title %>
                <br />
                <%= @book.author %>
              </a>
              <div class="flex">
                <p class="mr-2 font-medium text-md font-heading">
                  <span>Average Rating: <%= @book.average_rating %></span>
                </p>
                <p class="mr-2 font-medium text-md font-heading">
                  <span>Total Ratings: <%= @book.reviews.count %></span>
                </p>
              </div>
              <p class="mr-2 font-medium text-md font-heading">
                <span>
                  <%= @book.ratings_count.map{ |rating, count| "(#{rating} star: #{count})" }.join(" ") %>
                </span>
              </p>
            </div>
            <div class="w-full px-2 md:w-auto"><a
                class="inline-block w-full px-6 py-4 text-xl font-medium leading-8 tracking-tighter text-center text-white bg-blue-500 md:w-auto font-heading hover:bg-blue-600 focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 rounded-xl"
                href="#">Add&nbsp;to&nbsp;cart</a></div>
          </div>
        </div>
      </div>
    </div>
    <div class="flex my-5">
      <h2 class="text-4xl"><%= @reviews.count %> reviews </h2>
      <a href='#'>Add Your Review!</a>
    </div>
    <div class="mb-2 overflow-hidden shadow-lg rounded-t-8xl rounded-b-5xl">
      <%= render partial: 'review_card', collection: @reviews, as: :review %>
    </div>
</section>
